/* pages/course/room-detail/index.wxss */

.container{
  padding-bottom: 100rpx;
}

swiper{
  height: 750rpx;
}

video{
  width: 100%;
}

.slide-image{
  width: 750rpx;
  height: 750rpx;
}

.wxParse-p{
  overflow: hidden
}

.btn-phone{
  width: 100%;
  border-radius: 0;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 90rpx;
  top: -20rpx;
}

.footer-box .join-shop-cart {
  text-align: center;
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  background-color: #ef8203;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100rpx;
  flex: 1;
  line-height: 100rpx;
  background-color: #00bfe0;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-appoint {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 34rpx;
  border: none;
  border-radius: 0px;
}

button[class="now-appoint"]::after {
  border: 0;
}

.footer-box .telphone {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 34rpx;
}

.room-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 15rpx;
}

.room-info .price{
  font-size: 28rpx;
  color: #ef8203
}

.room-info .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}



.create-time {
  font-size: 26rpx;
  color: #999;
}

.nick-name {
  font-size: 28rpx;
}

.user-info {
  align-items: center;

}

.user-info image {
  margin-right: 8rpx;
}

.list-item {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #ddd;
}

.list-item .content{
  font-size: 32rpx;
}

.collection image{
  width: 70rpx;
  height: 70rpx;
}

.avatar{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
}